<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ece420.newapp.MainActivity">

    <Button
        android:id="@+id/capture_control_button"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:text="@string/StartEcho"
        android:textSize="40sp"
        android:onClick="onEchoClick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="?android:attr/buttonBarButtonStyle" />

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="100dp">

        <Button
            android:id="@+id/buttonRobot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Robot"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/buttonRadio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Radio"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/buttonVader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Vader"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/buttonOriginal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Original"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="RTVOCO: Real-Time Phase Vocoder"
        android:textSize="30sp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:id="@+id/selectionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selection: "
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Material.Small"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: "
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="500dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"/>

</RelativeLayout>
